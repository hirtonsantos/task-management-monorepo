{
  "name": "@task-app/database",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "typeorm": "typeorm",
    "migration:generate": "pnpm build && typeorm migration:generate -d dist/data-source.js",
    "migration:run": "pnpm build && typeorm migration:run -d dist/data-source.js",
    "migration:revert": "pnpm build && typeorm migration:revert -d dist/data-source.js",
    "db:migrate": "pnpm migration:run",
    "db:seed": "pnpm build && node dist/seeds/run-seeds.js",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@task-app/shared": "workspace:*",
    "bcrypt": "^5.1.1",
    "dotenv": "^17.2.3",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0"
  }
}